<h2 class ='text-center'>Creating a new restaurant</h2>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification message: 'This is all wrong...ğŸ™…' %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name%>
    <%= f.input :address%>
    <%= f.input :phone_number%>
    <%= f.input :category, include_blank: 'Pick a category',
     collection: ['chinese', 'italian', 'japanese','french', 'belgian'] %>
    <%= f.submit "Add a restaurant", class: "btn btn-primary" %>
  <% end %>
<% end %>
